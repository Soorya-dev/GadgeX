    <style>
        /* CSS */
.category-item {
    display: block;
    padding: 10px;
    text-decoration: none;
    color: #333;
    transition: background-color 0.3s ease, color 0.3s ease;
}

.category-item:hover {
    background-color: #f5f5f5;
    color: #007bff; /* Change text color on hover */
}

.category-item i {
    margin-right: 10px;
}

.category-item h5 {
    display: inline-block;
    margin: 0;
    font-size: 16px;
}

.category-item span {
    display: block;
    font-size: 12px;
    color: #999;
}

/* Optional: Add some spacing between category items */
.menu-vertical a {
    margin-bottom: 10px;
}

/* Cart Dropdown Container */
.cart-dropdown {
  position: relative;
}

/* Cart Dropdown Icon */
.cart-dropdown .icon {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

/* Cart Dropdown Count */
.cart-dropdown .cart-count {
  position: absolute;
  top: 0;
  right: 0;
  background-color: red;
  color: white;
  border-radius: 50%;
  padding: 2px 6px;
  font-size: 12px;
}

/* Dropdown Menu */
.cart-dropdown .dropdown-menu {
  position: absolute;
  top: 100%;
  right: 0;
  z-index: 1000;
  background-color: #fff;
  border: 1px solid #ddd;
  box-shadow: 0 2px 5px rgba(0,0,0,0.15);
  padding: 10px;
}

/* Cart Item */
.cart-item {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

/* Cart Item Image */
.cart-item-image {
  width: 50px; /* Adjust the width as needed */
  height: 50px; /* Set a fixed height */
  object-fit: cover; /* Ensure image fits within the given dimensions */
  margin-right: 10px;
  border-radius: 4px; /* Optional: Add rounded corners */
}

/* Cart Item Details */
.cart-item div {
  flex: 1;
}

/* Cart Item Heading */
.cart-item h4 {
  margin: 0;
  font-size: 14px;
}

/* Cart Item Text */
.cart-item p {
  margin: 2px 0;
  font-size: 12px;
}

/* Dropdown Cart Action Buttons */
.dropdown-cart-action {
  display: flex;
  justify-content: space-between;
  margin-top: 10px;
}

/* View Cart Button */
.dropdown-cart-action .btn-primary {
  background-color: #007bff;
  color: white;
  padding: 8px 12px;
  border: none;
  border-radius: 4px;
  font-size: 12px;
  text-decoration: none;
}

/* Checkout Button */
.dropdown-cart-action .btn-outline-primary-2 {
  border: 1px solid #007bff;
  color: #007bff;
  padding: 8px 12px;
  border-radius: 4px;
  font-size: 12px;
  text-decoration: none;
}

.dropdown-cart-action .btn-outline-primary-2 span {
  margin-right: 5px;
}

