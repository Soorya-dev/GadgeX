<script>
    

        function validateForm() {
            const username = document.getElementById('register-username-2').value.trim();
            const email = document.getElementById('register-email-2').value.trim();
            const phoneNumber = document.getElementById('register-phonenumber-2').value.trim();
            const password = document.getElementById('register-password-2').value.trim();

            let isValid = true;

            if (!isValidUsername(username)) {
                displayError('username-error', 'Username must contain at least 3 letters and only one space.');
                isValid = false;
            }else{
                isValid=true;
            }

            if (!isValidEmail(email)) {
                displayError('email-error', 'Please enter a valid email address.');
                isValid = false;
            }else{
                isValid=true;
            }

            if (!isValidPhoneNumber(phoneNumber)) {
                displayError('phonenumber-error', 'Please enter a valid phone number.');
                isValid = false;
            }else{
                isValid=true;
            }

            if (!isValidPassword(password)) {
                displayError('password-error', 'Password must be between 6 to 20 characters and contain at least one digit, one lowercase letter, one uppercase letter, and one special character.');
                isValid = false;
            }else{
                isValid=true;
            }

            if (!isValid) {
                event.preventDefault();
            }
        };

        function isValidUsername(username) {
            const usernameRegex = /[a-zA-Z0-9_-]+$/; 
            if (!usernameRegex.test(username) || username.length < 3 || username.length > 16) {
                 return false; 
            }
            return true; 
        }

        function isValidEmail(email) {
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return emailRegex.test(email);
        }

        function isValidPhoneNumber(phoneNumber) {
            const phoneNumberRegex = /^\d{10}$/;
            return phoneNumberRegex.test(phoneNumber);
        }

        function isValidPassword(password) {
            const minLength = 6;
            const maxLength = 20;

            const passwordRegex = /^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[!@#$%^&*()_+\[\]{}|;:'",.<>?]).{minLength,maxLength}$/;

            if (password.length < minLength || password.length > maxLength) {
                throw new Error('Password must be between 6 and 20 characters long.');
            }

            if (!passwordRegex.test(password)) {
                throw new Error('Password must contain at least one digit, one lowercase letter, one uppercase letter, and one special character.');
            }

            return true;
        }

        function displayError(elementId, message) {
            const errorElement = document.getElementById(elementId);
            errorElement.textContent = message;
            errorElement.style.display = 'block';
        }

        document.addEventListener("DOMContentLoaded", function() {
            // Get the form element
            const form = document.getElementById("registration-form");

            // Attach keydown event listener to the form
            form.addEventListener("keydown", function(event) {
                // Check if the pressed key is Enter (key code 13)
                if (event.keyCode === 13) {
                    event.preventDefault(); // Prevent default form submission behavior
                    validateForm(); // Submit the form
                }
            });

            // Get the input elements
            const usernameInput = document.getElementById('register-username-2');
            const emailInput = document.getElementById('register-email-2');
            const phoneNumberInput = document.getElementById('register-phonenumber-2');
            const passwordInput = document.getElementById('register-password-2');

            // Attach input event listeners to the input fields
            usernameInput.addEventListener('input', function() {
                clearError('username-error');
            });

            emailInput.addEventListener('input', function() {
                clearError('email-error');
            });

            phoneNumberInput.addEventListener('input', function() {
                clearError('phonenumber-error');
            });

            passwordInput.addEventListener('input', function() {
                clearError('password-error');
            });
        });

        function clearError(elementId) {
            const errorElement = document.getElementById(elementId);
            errorElement.textContent = '';
            errorElement.style.display = 'none';
        }
</script>


