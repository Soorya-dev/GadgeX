                                  <div class="form-group">
                                    <label for="state">State:</label>
                                    <input
                                      type="text"
                                      id="state"
                                      name="state"
                                      class="form-control"
                                      required
                                    />
                                    <div class="invalid-feedback">
                                      Please enter your state.
                                    </div>
                                  </div>

                                  <button type="submit" class="btn btn-primary">
                                    Add Address
                                  </button>
                                </form>
                              </div>
                              <div class="modal-footer">
                                <button
                                  type="button"
                                  class="btn btn-secondary"
                                  data-dismiss="modal"
                                >
                                  Close
                                </button>
                              </div>
                            </div>
                          </div>
                        </div>
                        <!-- Edit Address Modal -->
                        <div
                          class="modal fade"
                          id="editAddressModal"
                          tabindex="-1"
                          role="dialog"
                          aria-labelledby="editAddressModalTitle"
                          aria-hidden="true"
