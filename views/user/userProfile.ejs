<script>
  $(document).ready(function () {
    // Function to validate form
    function validateForm(form) {
      var isValid = true;
      $(form)
        .find("input")
        .each(function () {
          if (!this.checkValidity()) {
            isValid = false;
            $(this).addClass("is-invalid");
          } else {
            $(this).removeClass("is-invalid");
          }
        });
      return isValid;
    }

    // Add address form submission
    $("#addAddressForm").on("submit", function (e) {
      e.preventDefault();
      if (!validateForm(this)) {
        return;
      }

      var formData = new FormData(this);
      var formEntries = {};

      formData.forEach(function (value, key) {
        formEntries[key] = value;
      });

      $.ajax({
        type: "POST",
        url: "/addAddress",
        contentType: "application/json",
        data: JSON.stringify(formEntries),
        success: function (response) {
          Swal.fire({
            icon: "success",
            title: "Success",
            text: "Address added successfully",
          });
          $("#exampleModalCenter").modal("hide");
          $("#addAddressForm")[0].reset();
          // Optionally, refresh the address list or page here
        },
        error: function (xhr, status, error) {
          console.error("Error:", error);
          Swal.fire({
            icon: "error",
            title: "Error",
            text: "An error occurred: " + xhr.responseText,
          });
        },
      });
    });

    // Populate edit address form with existing data
    // On clicking the edit button, populate the edit modal with the address data
    $(".edit-address").on("click", function () {
      var address = $(this).data("address");
      $("#addressId").val(address._id); // Populate hidden input with address ID
      $("#editName").val(address.name);
      $("#editMobile").val(address.mobile);
      $("#editHouseName").val(address.houseName);
      $("#editStreet").val(address.street);
      $("#editLandmark").val(address.landmark);
      $("#editPincode").val(address.pincode);
