    });

    // Edit address form submission
    $("#editAddressForm").on("submit", function (e) {
      e.preventDefault();
      if (!validateForm(this)) {
        return;
      }

      var formData = new FormData(this);
      var formEntries = {};

      // Add form data entries to formEntries object
      formData.forEach(function (value, key) {
        formEntries[key] = value;
      });

      // Add addressId to formEntries object
      formEntries["addressId"] = $("#addressId").val();

      $.ajax({
        type: "POST",
        url: "/editAddress",
        contentType: "application/json",
        data: JSON.stringify(formEntries),
        success: function (response) {
          Swal.fire({
            icon: "success",
            title: "Success",
            text: "Address updated successfully",
          });
          $("#editAddressModal").modal("hide");
          // Optionally, refresh the address list or page here
        },
