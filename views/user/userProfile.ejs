                  <div class="col-lg-6">
                    <div class="card card-dashboard">
                      <div class="card-body">
                        <h3 class="card-title">Billing Address</h3>
                        <% address.forEach(addr => { %>
                        <p>
                          <%= addr.name %><br />
                          <%= addr.houseName %><br />
                          <%= addr.street %><br />
                          <%= addr.city %>, <%= addr.state %> <%= addr.pincode
                          %><br />
                          <%= addr.mobile %><br />
                          <%= addr.user %><br />
                          <a
                            href="#"
                            class="edit-address btn btn-secondary"
                            data-address="<%= JSON.stringify(addr) %>"
                            data-toggle="modal"
                            data-target="#editAddressModal"
                            >Edit <i class="icon-edit"></i
                          ></a>
                          <br />
                          <a
                            href="#"
                            class="btn btn-primary delete-address"
                            data-address-id="<%= addr._id %>"
                            >Delete Address<i class="bi bi-trash"></i
                          ></a>
                        </p>
                        <% }); %>
                      </div>
                    </div>
                  </div>
                  <div class="col-lg-6">
